<section>
  <h1>Create New Post</h2>

  <form class="new-post-form">
    <div class="form-group text-center">
      <h3><label for="post-title">Title</label></h3>
      <input type="text" id="post-title" name="post-title" class="form-control"/>
    </div>
    <div class="form-group">
      <h3><label for="post-text">Post content</label></h3>
      <textarea id="post-text" name="post-text" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
  </form>
</section>

