{{#if posts.length}}
<section>
  <h2 class="mb-4">Your Posts</h2>
  <ol class="post-list">
    {{#each posts as |post|}}
    <li class="mb-4">
      {{> dashboard-post-info post}}      
    </li>
    {{/each}}
  </ol>
</section>
{{else}}
<section>
  <h3 class="mb-4">You haven't posted anything yet</h3>
</section>
{{/if}}

<button type="submit" class="btn btn-primary mb-4"><a href="/dashboard/new" class="text-white">Add New Post</a></button>